# {{ ansible_managed }}
server:
  http_listen_port: {{ promtail_port }}
  grpc_listen_port: 0

positions:
  filename: {{ promtail_data_dir }}/positions.yaml

clients:
  - url: {{ loki_url }}/loki/api/v1/push

scrape_configs:
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          host: {{ ansible_hostname }}
          __path__: "{{ '{' }}{{ promtail_log_paths | join(',') }}{{ '}' }}"
